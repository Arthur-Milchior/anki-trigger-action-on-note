{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trigger and actions: change one card depending on what occurs on another card",
  
  "type": "object",
  "properties": {
    "Automatically applies rules": {
      "type": "boolean"
    },
    "Apply on save": {
      "type": "boolean"
    },
    "rules": {
      "type": "object",
       "additionalProperties": {
         "type": "array",
         "items": {
           "properties": {
             "trigger":,
             "action":,
             "autoReverse": "boolean"
             }
         }
       }
    }
  }
}
